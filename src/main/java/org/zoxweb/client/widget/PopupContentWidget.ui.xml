<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
<ui:style>
	.popup-header
	{
		background-color: #A4B4C6;
	}
	.main-panel
	{
		background-color: #F2F2F2;
		border: 5px solid #A4B4C6;
		border-top: none;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel styleName="{style.main-panel}" width="30EM" height="20EM" horizontalAlignment="ALIGN_CENTER" ui:field="vpContent">
			<g:DockPanel width="100%" height="1.5EM" styleName="{style.popup-header}" ui:field="dpHeader" horizontalAlignment="ALIGN_RIGHT">
				<g:Dock direction="WEST">
					<g:HTML wordWrap="true" ui:field="hTitle" horizontalAlignment="ALIGN_LEFT" width="100%" height="2EM"/>
				</g:Dock>
			</g:DockPanel>
			<g:ScrollPanel ui:field="spContent" width="100%" height="18EM"/>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>  