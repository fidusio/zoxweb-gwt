<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.zoxweb.client.widget.custom.PhoneDAOWidget.Style">
	.invalid {
		color: red;
  		padding: 5px 4px;
  		border: 1px solid red;
  		font-size: 100%;
	}
	.background {
		background-color: #FFFFFF;
	}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel ui:field="vpMain" width="30EM" height="100%" styleName="{style.background}">
			<g:HorizontalPanel height="1.5EM" width="100%" ui:field="hpLinkPlaceHolder"/>
			<g:VerticalPanel ui:field="vpPhone" width="25EM" height="4EM">
				<g:HorizontalPanel width="25.7EM" height="2EM" ui:field="hpName" spacing="5"/>
				<g:HorizontalPanel width="100%" height="2EM" ui:field="hpPhoneNumber" verticalAlignment="ALIGN_MIDDLE">
				<g:HorizontalPanel ui:field="hpPhoneType" height="2EM" width="5EM" spacing="5"/>
			</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 