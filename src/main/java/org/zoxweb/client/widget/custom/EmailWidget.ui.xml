<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.zoxweb.client.widget.custom.EmailWidget.Style">
	.hyperlink {
		word-wrap: normal;
	}
	.background {
		background-color: #FFFFFF;
	}
	.invalid {
		color: red;
  		padding: 5px 4px;
  		border: 1px solid red;
  		font-size: 100%;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel ui:field="vpMain" width="30EM" height="100%" styleName="{style.background}">
			<g:Anchor text="New email" height="1.5EM" width="100%" ui:field="hrefLink" styleName="{style.hyperlink}"/>
			<g:HorizontalPanel verticalAlignment="ALIGN_TOP" ui:field="hpEmail" width="27EM" height="2EM"/>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 