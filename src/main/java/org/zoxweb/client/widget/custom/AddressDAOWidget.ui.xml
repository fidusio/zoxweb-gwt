<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="org.zoxweb.client.widget.custom.AddressDAOWidget.Style">
	.invalid {
		color: red;
  		padding: 5px 4px;
  		border: 1px solid red;
  		font-size: 100%;
	}
	.label {
		font-weight: bold;
		color: #2E2E2E;
	}
	.background {
		background-color: #FFFFFF;
	}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel width="30EM" height="100%" ui:field="vpMain" styleName="{style.background}">
			<g:HorizontalPanel ui:field="hpLinkPlaceHolder" width="100%" height="1.5EM"/>
			<g:VerticalPanel ui:field="vpAddress" width="100%" height="10EM" spacing="5">
				<g:HorizontalPanel width="20EM" height="2EM" verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="Address Description (optional)" width="15EM" height="1.5EM" styleName="{style.label}"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel ui:field="hpDescription" width="25EM" height="2EM" verticalAlignment="ALIGN_MIDDLE"/>
				<g:HorizontalPanel width="20EM" height="2EM" verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="Country" width="10EM" height="1.5EM" styleName="{style.label}"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel ui:field="hpCountry" verticalAlignment="ALIGN_MIDDLE" width="20EM" height="2EM"/>
				<g:HorizontalPanel width="20EM" height="2EM">
					<g:Label text="Street Address" width="15EM" height="1.5EM" styleName="{style.label}"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel width="25EM" height="2EM" ui:field="hpStreetAddress" verticalAlignment="ALIGN_MIDDLE"/>
				<g:HorizontalPanel width="20EM" height="2EM" verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="City" width="15EM" height="1.5EM" styleName="{style.label}"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel ui:field="hpCity" width="25EM" height="2EM" verticalAlignment="ALIGN_MIDDLE"/>
				<g:HorizontalPanel width="20EM" height="2EM" verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="State/Province" width="17EM" height="1.5EM" styleName="{style.label}"/>
					<g:Label text="ZIP/Postal Code" height="1.5EM" width="8EM" styleName="{style.label}"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel width="25EM" height="2EM" verticalAlignment="ALIGN_MIDDLE" ui:field="hpStateAndZipCode">
					<g:HorizontalPanel ui:field="hpStateOrProvince" verticalAlignment="ALIGN_MIDDLE" height="2EM" width="15EM"/>
					<g:HorizontalPanel ui:field="hpZipOrPostalCode" height="2EM" verticalAlignment="ALIGN_MIDDLE" width="7EM"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>	
	</g:HTMLPanel>
</ui:UiBinder> 