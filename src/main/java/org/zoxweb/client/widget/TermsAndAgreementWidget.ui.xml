<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.agreementName{
		align: left;
		margin: 2px 10px 2px 10px;
		spacing: 10;	
		width: 100%;
	}
	.agreementContent {
		resize: none;
	}
	</ui:style>
	<g:HTMLPanel>
	<g:VerticalPanel width="100%" height="2EM">
		<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_LEFT">
		    <g:cell>
		        <g:SimplePanel width="6EM">
		        	<g:CheckBox text="I agree to " ui:field="cbAgreement" width="100%" height="100%"/>
		        </g:SimplePanel>
		    </g:cell>
		    <g:cell width="100%">
		        <g:SimplePanel width="100%">
		        	<g:Hyperlink ui:field="hrefName" targetHistoryToken="newHistoryToken" width="100%" height="100%"/>
		        </g:SimplePanel>
		    </g:cell>
		</g:HorizontalPanel>
		<g:TextArea ui:field="taContent" width="100%" height="5EM" styleName="{style.agreementContent}"/>
	</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 


